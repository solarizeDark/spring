<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- scope="singleton" -->
    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig"
            p:jdbcUrl="jdbc:postgresql://localhost:5432/spring"
            p:driverClassName="org.postgresql.Driver"
            p:username="postgres"
            p:password="p2s28"
            p:maximumPoolSize="10"
        />

    <bean id="hikariDataSource" class="com.zaxxer.hikari.HikariDataSource"
        c:configuration="hikariConfig"/>

    <bean id="namedJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate"
        c:dataSource="hikariDataSource"/>

    <bean id="studentsRepository" class="ru.fedusiv.repositories.StudentsRepositoryImpl"
        c:jdbcTemplate="namedJdbcTemplate"/>

    <bean id="studentsService" class="ru.fedusiv.services.StudentsServiceImpl"
        c:studentsRepository="studentsRepository"/>

</beans>